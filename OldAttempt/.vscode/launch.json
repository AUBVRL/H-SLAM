{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/MySLAM",
            "args": [
                "-datasetName=TumMono", //Euroc, TumMono, TartanAir, Kitti, Live

                "-imagePath=/mnt/Drive/VSLAM_Datasets/TUM_Mono/sequence_50/images.zip",
                // "-imagePath=/mnt/Drive/VSLAM_Datasets/EuroC/MH_01_easy.zip",
                // "-imagePath=/mnt/Drive/VSLAM_Datasets/TartanAir/MonocularTrackTest/ME001/", //TartanAir

                "-intrinsics=${workspaceFolder}/misc/Intrinsics/TumMono_25to26-28to32-35to50.yaml",
                // "-intrinsics=${workspaceFolder}/Intrinsics/Euroc.yaml",
                // "-intrinsics=${workspaceFolder}/Intrinsics/TartanAir.yaml", //TartanAir

                "-vocabPath=${workspaceFolder}/misc/orbvoc.dbow3",

                //Optional inputs

                "-timeStamps=/mnt/Drive/VSLAM_Datasets/TUM_Mono/sequence_50/times.txt",
                // "-timeStamps=${workspaceFolder}/Intrinsics/eurocTimeStamps/MH01.txt",

                "-vignetteModel=/mnt/Drive/VSLAM_Datasets/TUM_Mono/sequence_50/vignette.png",
                "-gammaModel=/mnt/Drive/VSLAM_Datasets/TUM_Mono/sequence_50/pcalib.txt",
                "-startIndex=0",
                "-endIndex=999999",
                "-onlPhotoCalib=False",
                "-quiet=True",
                "-disableGUI=False",
                "-playbackSpeed=0.0",
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}